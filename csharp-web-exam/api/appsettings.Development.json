{
  "Environment": "Development",
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=app_data/app_dev.db"
  },
  "JwtSettings": {
    "SecretKey": "CSharpWebExam-Dev-SuperSecretKey-MinLength32Characters!",
    "Issuer": "CSharpWebExamAPI-Dev",
    "Audience": "CSharpWebExamClient-Dev",
    "ExpirationMinutes": "120"
  },
  "ApiSettings": {
    "EnableSwagger": true,
    "EnableDetailedErrors": true,
    "EnableCors": true,
    "CorsOrigins": "*",
    "MaxPageSize": 100,
    "DefaultPageSize": 10
  },
  "AllowedHosts": "*"
}
